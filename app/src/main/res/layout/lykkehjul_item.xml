<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0CEDC">

    <!--
 https://stackoverflow.com/questions/2361497/how-to-create-edittext-accepts-alphabets-only-in-android/35954993
 -->


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gætKnap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_knap_blaa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gætTekstFelt"
        app:layout_constraintVertical_bias="0.309" />


    <!-- Kilde til billede https://www.flaticon.com/free-icon/wheel-of-fortune_2006249 -->

    <ImageView
        android:id="@+id/ordBackdrop"
        android:layout_width="191dp"
        android:layout_height="193dp"
        android:background="@drawable/wheel_of_fortune"
        app:layout_constraintBottom_toBottomOf="@+id/spinKnap"
        app:layout_constraintEnd_toEndOf="@+id/spinKnap"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="@+id/spinKnap"
        app:layout_constraintTop_toTopOf="@+id/spinKnap"
        app:layout_constraintVertical_bias="0.52" />

    <ImageView
        android:id="@+id/gaetBackdrop"
        android:layout_width="235dp"
        android:layout_height="73dp"
        android:background="#9BB7E3"
        app:layout_constraintBottom_toBottomOf="@+id/gætTekstFelt"
        app:layout_constraintEnd_toEndOf="@+id/gætTekstFelt"
        app:layout_constraintStart_toStartOf="@+id/gætTekstFelt"
        app:layout_constraintTop_toTopOf="@+id/gætTekstFelt" />

    <EditText
        android:id="@+id/gætTekstFelt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinKnap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/spinKnap"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/gradient_knap_blaa"
        android:text="Spin Hjullet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spinResul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="//PLACEHOLDER//"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/spinKnap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <TextView
        android:id="@+id/hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="hp:placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="point:placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ordGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ordPlaceholder"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/gætTekstFelt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinKnap"
        app:layout_constraintVertical_bias="0.564" />

</androidx.constraintlayout.widget.ConstraintLayout>