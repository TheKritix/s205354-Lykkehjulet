<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0CEDC">

    <!--
 https://stackoverflow.com/questions/2361497/how-to-create-edittext-accepts-alphabets-only-in-android/35954993
 -->


    <TextView
        android:id="@+id/ordGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="@string/ordplaceholder"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gætTekstFelt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinKnap"
        app:layout_constraintVertical_bias="0.564" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gætKnap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_knap_blaa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gætTekstFelt"
        app:layout_constraintVertical_bias="0.118"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/gaetBackdrop"
        android:layout_width="235dp"
        android:layout_height="73dp"
        android:background="#9BB7E3"
        app:layout_constraintBottom_toBottomOf="@+id/gætTekstFelt"
        app:layout_constraintEnd_toEndOf="@+id/gætTekstFelt"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="@+id/gætTekstFelt"
        app:layout_constraintTop_toTopOf="@+id/gætTekstFelt"
        app:layout_constraintVertical_bias="0.52" />

    <EditText
        android:id="@+id/gætTekstFelt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="512dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:ems="10"
        android:hint="@string/bogstavHint"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinKnap" />

</androidx.constraintlayout.widget.ConstraintLayout>